  <div class="row">
    <div class="jumbotron">
      <div id="rutgers-banner-event-registration">
    
        <h2>Event Registration</h2>
      </div>
    </div>
  </div>

  
<div class=row>
  <div class="col-md-6">
    <form method="POST" action="/event-registration">
      <div class="form-group">
        <label for="event_name">Name of Event:</label>
        <input type="text" class="form-control" name="event_name">
      </div>
      <div class="form-group">
        <label for="event_day">Date of Event:</label>
        <input class="datepicker form-control" name="event_date">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Day of Week:</label>
        <input type="text" class="form-control" name="event_day">
      </div>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <label for="exampleInputEmail1">Start Time:</label>
            <input type="text" class="form-control" name="start_time">
          </div>          
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label for="exampleInputEmail1">End Time:</label>
            <input type="text" class="form-control" name="end_time">
          </div>          
        </div>
      </div>

      <div class="form-group">
        <label for="exampleInputEmail1">Venue of Event</label>
        <input type="text" class="form-control" name="venue_name">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Capacity of Venue:</label>
        <input type="text" class="form-control" name="capacity">
      </div>
      <div class="form-group">
        <label for="exampleInputtext1">First Performing Artist:</label>
        <input type="text" class="form-control" name="artist1">
      </div>
      <div class="form-group">
        <label for="exampleInputtext1">Second Performing Artist:</label>
        <input type="text" class="form-control" name="artist2">
      </div>   
      <div class="form-group">
        <label for="exampleInputtext1">Headlining Performing Artist:</label>
        <input type="text" class="form-control" name="artist3">
      </div>         
      <div class="form-group">
        <label>Genre of Event:</label>
        <select type="text" class="form-control" name="genre">
          <option>Punk</option>
          <option>Hip Hop</option>
          <option>Electronic</option>
          <option>Spoken Word</option>
          <option>Sports</option>   
          <option>Education</option>   
          <option>Arts</option>   
          <option>Business</option>   
          <option>Food</option>   
          <option>Party</option>   
          <option>Misc</option>      
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Cost of Event:</label>
        <input type="text" class="form-control" name="cost">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Facebook Event / Website:</label>
        <input type="text" class="form-control" name="event_url">
      </div>  
      <br/>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>  