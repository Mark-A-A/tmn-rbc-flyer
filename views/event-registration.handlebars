<div class="row">
 <div class="col-md-12">
  <div class="jumbotron">
    <h1>Event Registration</h1>
  </div>
</div>
</div>
<div class="row">
  <div class="col-md-6">
    <form method="POST" action="/event-registration">
      <div class="form-group">
        <label for="nameOfEvent">Name of Event:</label>
        <input type="text" class="form-control" name="event_name">
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        <input type="text" class="form-control" name="event_date">
      </div>
      <div class="form-group">
        <label for="dayOfWeek">Day of Week:</label>
        <input type="text" class="form-control" name="event_day">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Start Time:</label>
        <input type="text" class="form-control" name="username">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" name="password">
      </div>
      <div class="form-group">
        <label>User Type:</label>
        <select type="text" class="form-control" name="user_type">
          <option>Student</option>
          <option>Teacher</option>
          <option>Promoter</option>
        </select>
      </div>
      <br/>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>